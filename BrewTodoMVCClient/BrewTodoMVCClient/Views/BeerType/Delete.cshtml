@model BrewTodoMVCClient.Models.BeerTypeViewModel

@{ ViewBag.Title = "Delete Beer Type"; }

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@ViewBag.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BeerTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BeerTypeName)
        </dd>

